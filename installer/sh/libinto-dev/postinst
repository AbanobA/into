# Into post-installation script

sed -i -e "s#ROOT#$root#g" $root/into/bin/intoenv

echo Installed to $root/into.
. $root/into/bin/intoenv
if [ -n "$QTDIR" ]; then
  echo "You seem to have Qt environment set up."
  read -p "Run Into Demo now? [Y/n] " rundemo
  case "$rundemo" in
    n*|N*)
      echo "Bummer."
      exit 0
  esac
  cd $root/into/demos
  ./intodemo &
fi
